<div class="card">
  <div class="card-header">
    <h3 class="card-title"><%= @user.name %></h3>
  </div>
  <div class="card-body">
    <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
  </div>
</div>
<div class="mb-3">
  <%= render 'relationships/follow_button', user: @user %>
</div>
<div class="mb-3">
  <%= form_with(model: @user, local: true, method: :delete) do |f| %>
    <%= f.submit 'ユーザ退会', data: { confirm: "本当に退会処理してもよろしいですか？" } %>
  <% end %>
</div>
